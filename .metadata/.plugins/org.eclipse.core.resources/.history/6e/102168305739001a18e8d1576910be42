
public class OperatorMath {

	
	public static void main(String[] args) {
		double num1 = 0.4d;
		double num2 = 0.20d;
		double result;
		double result1;
		double result2;
		double result3; 
		double result4; 
		
		char add = '+'; // char operator '+'; same 
		char sub = '-';
		char mult = '*';
		char  divi = '/';
		
		result = num1 + num2;
		result = num1 - num2;
		
		System.out.println(num1 + " "+add+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+sub+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+mult+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+divi+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+add+" "+num2+" = "+result);
		System.out.println();
		System.out.println(num1 + " "+add+" "+num2+" = "+result);
		System.out.println();
		
		int a = 10; 
		int b = 3;
		int x  = a % b;
		System.out.println("x = "+x);		
		
		int i = 1;
		i++;
		System.out.println(i);
			
	}

}
