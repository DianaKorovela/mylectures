package lv.diana;

import java.util.ArrayList;

public class TaskArrayMethods {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
ArrayList <String> cars = new ArrayList <>();
		
		cars.add("Volvo");
		cars.add("BMW");
		cars.add("Ford");
		cars.add("Mazda");
		
		
		
		System.out.println();
		for(String car : cars){ // For each
			System.out.println(car);
			

		}
		System.out.println();
		cars.remove ("Ford");
		for(String car : cars){ // For each
			System.out.println(car);
	}
}
}
